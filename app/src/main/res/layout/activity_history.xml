<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".HistoryActivity">

    <ListView
        android:id="@+id/lista_historico"
        android:layout_width="410dp"
        android:layout_height="303dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_add_historico"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_skinner"
        android:text="@string/add_historico"
        android:textColor="#E8E8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_datosmedico" />

    <Button
        android:id="@+id/button_tratamientos"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_skinner"
        android:text="@string/ver_tratamientos"
        android:textColor="#E8E8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_historico" />

    <Button
        android:id="@+id/button_gps"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_skinner"
        android:text="@string/btn_map"
        android:textColor="#E8E8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_tratamientos" />

    <ImageView
        android:id="@+id/img_msj"
        android:layout_width="71dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_tratamientos"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_mensajeria" />

    <TextView
        android:id="@+id/tv_datosmedico"
        android:layout_width="346dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lista_historico" />

    <TextView
        android:id="@+id/tv_envieMensaje"
        android:layout_width="89dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:text="Envíe un mensaje a su médico"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_msj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_add_historico"
        app:layout_constraintTop_toBottomOf="@+id/tv_datosmedico" />

</androidx.constraintlayout.widget.ConstraintLayout>